meta {
  name: search by host name with id field
  type: http
  seq: 6
}

get {
  url: http://{{url}}/centreon/api/index.php?action=list&object=centreon_realtime_hosts&search={{host_name}}&fields=id
  body: none
  auth: none
}

query {
  action: list
  object: centreon_realtime_hosts
  search: {{host_name}}
  fields: id
}

headers {
  Content-Type: application/json
  centreon-auth-token: {{token}}
}

tests {
  var helpers = eval(globals.loadHelpers);
  helpers.checkHostList(["id"]);
}
